<Application x:Class="SalaoDeCabelereiro.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SalaoDeCabelereiro"
             StartupUri="View/SplashScreen.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Window" x:Key="DesignTela">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Background" Value="WhiteSmoke"/>
                <Setter Property="Height" Value="720"/>
                <Setter Property="Width" Value="1280"/>
                <Setter Property="MinHeight" Value="720"/>
                <Setter Property="MinWidth" Value="1280"/>
                <Setter Property="Language" Value="pt-br"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
